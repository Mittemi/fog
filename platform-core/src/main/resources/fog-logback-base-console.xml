<?xml version="1.0" encoding="UTF-8"?>

<included>
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${CONSOLE_LOG_PATTERN}</pattern>
            <charset></charset>
        </encoder>
    </appender>

    <logger name="at.sintrum.fog" level="DEBUG"/>

    <logger name="at.sintrum.fog.application.client.api" level="ERROR"/>

    <logger name="at.sintrum.fog.applicationhousing.client.api" level="ERROR"/>
    <logger name="at.sintrum.fog.deploymentmanager.client.api" level="ERROR"/>
    <logger name="at.sintrum.fog.metadatamanager.client.api" level="ERROR"/>
    <logger name="at.sintrum.fog.simulation.client.api" level="ERROR"/>


    <logger name="$FeignFilterRequestMappingHandlerMapping" level="INFO"/>


    <logger name="com.netflix.discovery.DiscoveryClient" level="OFF"/>
    <logger name="com.netflix.discovery.shared" level="OFF"/>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>
</included>